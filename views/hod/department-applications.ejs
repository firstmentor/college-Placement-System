<%- include('../layouts/navbar.ejs') %> 
<%- include('../layouts/sidebar.ejs') %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0 text-dark">Department-wise Applications</h1>
        </div>
        <!-- /.col -->
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active">Department-wise Applications</li>
          </ol>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </div>
  <!-- /.content-header -->

  <!-- Main content -->
  <div class="content">
    <div class="container-fluid">
      <div class="card">
        <div class="card-header">
          

          
        </div>
        <!-- /.card-header -->
        <div class="card-body">
          <table id="example1" class="table table-bordered table-striped">
            <thead>
              <tr>
                <th>Photo</th>
                <th>Student Name</th>
                <th>Department</th>
                <th>Email</th>
                <th>Job Title</th>
                <th>Company</th>
                <th>Status</th>
                <th>Resume</th>
              </tr>
            </thead>
            <tbody>

                <% applications.forEach(app => { %>
                    <tr>
                      <td>
                        <img src="<%= app.studentId.image?.url || '/default.png' %>" width="60" height="60" style="object-fit: cover;" />
                      </td>
                      <td><%= app.studentId.name %></td>
                      <td><%= app.studentId.branch %></td>
                      <td><%= app.studentId.email %></td>
                      <td><%= app.jobId.title %></td>
                      <td><%= app.jobId.companyId?.name %></td>
                      <td><%= app.status %></td>
                      <td>
                        <% if (app.studentId.resume?.url) { %>
                          <a href="<%= app.studentId.resume.url %>" target="_blank">View Resume</a>
                        <% } else { %>
                          N/A
                        <% } %>
                      </td>
                    </tr>
                  <% }); %>
              
            </tbody>

            <tfoot>
              <tr>
                <th>Photo</th>
                <th>Student Name</th>
                <th>Department</th>
                <th>Email</th>
                <th>Job Title</th>
                <th>Company</th>
                <th>Status</th>
                <th>Resume</th>
              </tr>
            </tfoot>
          </table>
        </div>
        <!-- /.card-body -->
      </div>
      <!-- /.card -->

      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </div>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->



<%- include('../layouts/footer.ejs') %>
