<%- include('../layouts/navbar.ejs') %> 
<%- include('../layouts/sidebar.ejs') %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header -->
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0 text-dark">Selected Students</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active">Selected Students</li>
          </ol>
        </div>
      </div>
    </div>
  </div>

  <!-- Main content -->
  <div class="content">
    <div class="container-fluid">
      <div class="row">
        <% if (applications.length === 0) { %>
          <div class="col-12">
            <div class="alert alert-info text-center">No selected students found.</div>
          </div>
        <% } else { %>
          <% applications.forEach(app => { %>
            <div class="col-md-4">
              <div class="card shadow mb-4">
                <img 
                  src="<%= app.studentId?.image?.url || '/default.png' %>" 
                  class="card-img-top" 
                  alt="Student Photo" 
                  style="height: 250px; object-fit: cover;" 
                />
                <div class="card-body">
                  <h5 class="card-title"><strong>Name:</strong> <%= app.studentId?.name || 'N/A' %></h5>
                 <br><br>
                  <p><strong>Email:</strong> <%= app.studentId?.email || 'N/A' %></p>
                  <p><strong>Branch:</strong> <%= app.studentId?.branch || 'N/A' %></p>
                  <p><strong>Company:</strong> <%= app.jobId?.companyId?.name || 'N/A' %></p>
                  <p><strong>Job:</strong> <%= app.jobId?.title || 'N/A' %></p>
                  <% if (app.studentId?.resume?.url) { %>
                    <a href="<%= app.studentId.resume.url %>" class="btn btn-sm btn-primary" target="_blank">View Resume</a>
                  <% } else { %>
                    <span class="text-muted">Resume not uploaded</span>
                  <% } %>
                </div>
              </div>
            </div>
          <% }) %>
        <% } %>
      </div>
    </div>
  </div>
</div>

<%- include('../layouts/footer.ejs') %>
