<%- include('../layouts/navbar.ejs') %> 
<%- include('../layouts/sidebar.ejs') %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0 text-dark">Select Students</h1>
        </div>
        <!-- /.col -->
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active">Select Students</li>
          </ol>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </div>
  <!-- /.content-header -->

  <!-- Main content -->
  <div class="content">
    <div class="container-fluid">
      <div class="content p-3">
        <div class="row">
          <% applications.forEach(app => { %>
            <div class="col-md-4">
              <div class="card shadow mb-4">
                <img src="<%= app.studentId.image?.url || '/default.png' %>" class="card-img-top" alt="Student Photo" style="height: 300px; object-fit: cover;" />
                <div class="card-body">
                  
                  <br>
                  <p><strong>Name:</strong> <%= app.studentId.name %></p>
                  <p><strong>Email:</strong> <%= app.studentId.email %></p>
                  <p><strong>Branch:</strong> <%= app.studentId.branch %></p>
                  <p><strong>Company:</strong> <%= app.jobId.companyId?.name %></p>
                  <p><strong>Job:</strong> <%= app.jobId.title %></p>
                
                  <a href="<%= app.studentId.resume?.url %>" class="btn btn-sm btn-primary" target="_blank">View Resume</a>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      </div>
  </div>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->



<%- include('../layouts/footer.ejs') %>
