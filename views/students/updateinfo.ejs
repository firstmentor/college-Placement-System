<%- include('../layouts/navbar.ejs') %> 
<%- include('../layouts/sidebar.ejs') %>

<div class="content-wrapper">
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0 text-dark">Student Edit</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active">Student Edit</li>
          </ol>
        </div>
      </div>
    </div>
  </div>

  <div class="content">
    <div class="container-fluid">
      <div class="card">
        <div class="card-header">
          <h3>Edit Student</h3>
        </div>
        <div class="card-body">
          <form
            action="/studentUpdate/<%= edit._id %>"
            method="post"
            enctype="multipart/form-data"
          >
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label>Roll No</label>
                  <input
                    type="text"
                    name="rollNumber"
                    class="form-control"
                    required
                    readonly
                    value="<%= edit.rollNumber %>"
                  />
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-group">
                  <label>10th Pass Year</label>
                  <input
                    type="text"
                    name="Xyear"
                    class="form-control"
                    required
                    value="<%= edit.Xyear %>"
                  />
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-group">
                  <label>10th Percentage</label>
                  <input
                    type="text"
                    name="Xmarks"
                    class="form-control"
                    required
                    value="<%= edit.Xmarks %>"
                  />
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-group">
                  <label>12th Pass Year</label>
                  <input
                    type="text"
                    name="XIIyear"
                    class="form-control"
                    required
                    value="<%= edit.XIIyear %>"
                  />
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-group">
                  <label>12th Percentage</label>
                  <input
                    type="text"
                    name="XIImarks"
                    class="form-control"
                    required
                    value="<%= edit.XIImarks %>"
                  />
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-group">
                  <label>Graduation Year</label>
                  <input
                    type="text"
                    name="GraYear"
                    class="form-control"
                    required
                    value="<%= edit.GraYear %>"
                  />
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-group">
                  <label>Graduation CGPA</label>
                  <input
                    type="text"
                    name="GraCGPA"
                    class="form-control"
                    required
                    value="<%= edit.GraCGPA %>"
                  />
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-group">
                  <label>Resume</label>
                  <input type="file" name="resume" class="form-control" />
                  <% if (edit.resume) { %>
                    <small>Current File: <%= edit.resume %></small>
                  <% } %>
                </div>
              </div>
            </div>

            <button type="submit" class="btn btn-info mt-3">Update</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../layouts/footer.ejs') %>
